@model IEnumerable<CD161656_FM180247_Desafio01.Models.transacciones>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nueva Transaccion", "Create")
</p>
<table class="table table-striped">
   <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaTransaccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaAplicacion)
        </th>
        <th>
