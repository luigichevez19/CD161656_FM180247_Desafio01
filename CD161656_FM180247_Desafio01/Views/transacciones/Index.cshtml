            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaTransaccion.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaAplicacion.Date)
        </td>
